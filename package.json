{
  "name": "techfix-pro-spa",
  "version": "1.0.0",
  "description": "Single Page Application para gestión de servicio técnico con autenticación JWT, funcionalidad offline-first y backend Strapi",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=3000 --entry-file=index.html",
    "serve": "live-server --port=3000 --entry-file=index.html",
    "strapi:dev": "cd docker && docker-compose up -d",
    "strapi:stop": "cd docker && docker-compose down",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "npm run lint && npm run test",
    "start": "npm run serve"
  },
  "keywords": [
    "spa",
    "javascript",
    "bootstrap",
    "strapi",
    "jwt",
    "offline-first",
    "indexeddb",
    "servicio-tecnico"
  ],
  "author": "Jaime Gavilán Torrero",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "nyc": "^15.1.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testMatch": [
      "**/src/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/js/tests/**"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}